    private TotalesDashboard CalcularTotales()
    {
        var ingresosBrutos = resultadosDiarios.Sum(r => r.IngresosBrutos);
        var gastosTotales = resultadosDiarios.Sum(r => r.TotalGastos); 
        var beneficioNeto = ingresosBrutos - gastosTotales;
        return new TotalesDashboard
        {
            GastoTotal = gastosTotales,
            BeneficioNeto = beneficioNeto,
            PorcentajeGastos = ingresosBrutos != 0 ? 1 - (gastosTotales / ingresosBrutos) * 100f : 0f
        };
    }

    private void CalcularEstadisticasFinales()
    {
        if (!resultadosDiarios.Any())
        {
            estadisticasFinales = new EstadisticasFinales();
            return;
