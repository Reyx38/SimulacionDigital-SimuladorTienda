                                                @{
                                                    float cx = 200f, cy = 200f, radio = 120f;

                                                    float porcentajePersonal = totalGastos != 0 ? (totalGastosPersonal / totalGastos) * 100f : 0f;
                                                    float porcentajeAdm = totalGastos != 0 ? (totalGastosAdm / totalGastos) * 100f : 0f;
                                                    float porcentajeMenores = totalGastos != 0 ? (totalGastosMenores / totalGastos) * 100f : 0f;
                                                    float porcentajeFinan = totalGastos != 0 ? (totalFinanciamiento / totalGastos) * 100f : 0f;

                                                    float a1 = 0f;
                                                    float a2 = a1 + porcentajePersonal * 3.6f;
                                                    float a3 = a2 + porcentajeAdm * 3.6f;
                                                    float a4 = a3 + porcentajeMenores * 3.6f;

                                                    string Arc(float ini, float fin)
                                                    {
                                                        var x1 = cx + radio * Math.Cos(ini * Math.PI / 180);
                                                        var y1 = cy + radio * Math.Sin(ini * Math.PI / 180);
                                                        var x2 = cx + radio * Math.Cos(fin * Math.PI / 180);
                                                        var y2 = cy + radio * Math.Sin(fin * Math.PI / 180);
                                                        int large = (fin - ini) > 180 ? 1 : 0;

                                                        return $"M {cx} {cy} L {x1} {y1} A {radio} {radio} 0 {large} 1 {x2} {y2} Z";
                                                    }

                                                    void DibujarPorcentaje(float ini, float fin, string txt)
                                                    {
                                                        float mid = (ini + fin) / 2;
                                                        float rx = cx + (radio * 0.7f) * (float)Math.Cos(mid * Math.PI / 180);
                                                        float ry = cy + (radio * 0.7f) * (float)Math.Sin(mid * Math.PI / 180);

                                                        <g>
                                                            <rect x="@(rx - 28)" y="@(ry - 12)" width="56" height="24" rx="4" fill="rgba(0,0,0,0.6)" />
                                                            <text x="@rx" y="@(ry + 4)" text-anchor="middle" font-size="12" fill="white" font-weight="700">@txt</text>
                                                        </g>
                                                        ;
                                                    }
                                                }

                                                <!-- Segmentos -->
                                                <path d="@Arc(a1, a2)" fill="#5190d5" stroke="white" stroke-width="2" />
                                                <path d="@Arc(a2, a3)" fill="#f39c6b" stroke="white" stroke-width="2" />
                                                <path d="@Arc(a3, a4)" fill="#a0a0a0" stroke="white" stroke-width="2" />
                                                <path d="@Arc(a4, 360)" fill="#ffc107" stroke="white" stroke-width="2" />

                                                <!-- Porcentajes -->
                                                @{
                                                    DibujarPorcentaje(a1, a2, $"{porcentajePersonal:N0}%");
                                                    DibujarPorcentaje(a2, a3, $"{porcentajeAdm:N0}%");
                                                    DibujarPorcentaje(a3, a4, $"{porcentajeMenores:N0}%");
                                                    DibujarPorcentaje(a4, 360, $"{porcentajeFinan:N0}%");
                                                }
                                            </svg>
                                        </div>

                                        <!-- Leyenda -->
                                        <div class="d-flex justify-content-center gap-4 mt-3">
                                            <div><span style="display:inline-block;width:20px;height:20px;background:#5190d5;border-radius:3px;"></span> <small>Gastos de Personal</small></div>
                                            <div><span style="display:inline-block;width:20px;height:20px;background:#f39c6b;border-radius:3px;"></span> <small>Gastos Administrativos</small></div>
                                            <div><span style="display:inline-block;width:20px;height:20px;background:#a0a0a0;border-radius:3px;"></span> <small>Gastos Menores</small></div>
                                            <div><span style="display:inline-block;width:20px;height:20px;background:#ffc107;border-radius:3px;"></span> <small>Financiamiento</small></div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                    <!-- Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" @onclick="CerrarEstadisticas">Cerrar</button>
                    </div>

                </div>
            </div>
        </div>
    }

